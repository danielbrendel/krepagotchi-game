{
    "name": "Krepagotchi",
    "version": "1.0.0",
    "description": "Keep your Creeper as a pet",
    "author": "Daniel Brendel",
    "main": "src/main.js",
    "build": {
        "appId": "com.danielbrendel.krepagotchi",
        "productName": "Krepagotchi",
        "icon": "game/logo"
    },
    "scripts": {
        "start": "electron .",
        "build-windows": "electron-builder --win=portable --x64",
